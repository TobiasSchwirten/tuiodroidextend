<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout android:layout_height="fill_parent" android:layout_width="wrap_content" android:id="@+id/headerLayout">
        <ImageView android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:padding="10dip" android:id="@+id/imageView"></ImageView>
        <LinearLayout android:orientation="vertical" android:id="@+id/aboutLayout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/versionLayout">
                <TextView android:text="@string/app_name" android:padding="5dip" android:layout_height="wrap_content" android:id="@+id/textApplication" android:layout_width="wrap_content"></TextView>
                <TextView android:layout_height="wrap_content" android:id="@+id/textVersion" android:text="v0.0" android:layout_width="wrap_content"></TextView>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/textAuthors" android:text="@string/author_string" android:padding="5dip"></TextView>
        </LinearLayout>
    </LinearLayout>
   <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textHelp" android:text="@string/help_string" android:paddingLeft="10dip" android:paddingRight="10dip"></TextView>
   <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/buttonLayout" android:padding="10dip" android:orientation="horizontal">
       <Button android:id="@+id/okButton" android:layout_height="wrap_content" android:text="      OK      " android:layout_width="fill_parent"></Button>
   </LinearLayout>
  
</LinearLayout>
